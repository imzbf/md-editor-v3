{
  "name": "md-editor-v3",
  "version": "4.19.2",
  "keywords": [
    "vue",
    "vue3",
    "javascript",
    "typescript",
    "jsx",
    "tsx",
    "markdown",
    "editor",
    "theme",
    "html"
  ],
  "description": "Markdown编辑器，基于vue3，使用jsx和typescript语法开发，支持切换主题，支持prettier美化文本，图片粘贴上传，图片裁剪上传，支持仅预览模式，支持在tsx项目使用。",
  "author": {
    "name": "zbf",
    "url": "https://github.com/imzbf"
  },
  "homepage": "https://imzbf.github.io/md-editor-v3/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imzbf/md-editor-v3.git"
  },
  "bugs": {
    "url": "https://github.com/imzbf/md-editor-v3/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --mode=preview",
    "serve": "vite preview"
  },
  "dependencies": {
    "@vavt/cm-extension": "^1.5.0",
    "@vavt/message": "^2.0.0",
    "@vavt/v3-extension": "^1.3.0",
    "axios": "^1.7.4",
    "dayjs": "^1.11.10",
    "markdown-it-anchor": "^9.0.1",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mark": "^4.0.0",
    "md-editor-v3": "^4.19.2",
    "nprogress": "^0.2.0",
    "vue": "3.4.38",
    "vue-router": "^4.4.3",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.11.24",
    "@types/nprogress": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vavt/vite-plugin-import-markdown": "^1.0.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vue/compiler-sfc": "^3.4.38",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.22.0",
    "less": "^4.1.2",
    "multiparty": "^4.2.3",
    "prettier": "^3.2.5",
    "ts-morph": "^23.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vue-tsc": "^2.0.29"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "parser": "vue-eslint-parser",
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:vue/vue3-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "parser": "@typescript-eslint/parser",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "vue",
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "vue/attribute-hyphenation": [
        "error",
        "never",
        {
          "ignore": []
        }
      ],
      "vue/v-on-event-hyphenation": [
        "error",
        "never",
        {
          "autofix": true,
          "ignore": []
        }
      ],
      "vue/component-name-in-template-casing": [
        "error",
        "PascalCase",
        {
          "registeredComponentsOnly": false,
          "ignores": []
        }
      ]
    },
    "globals": {
      "defineProps": "readonly",
      "defineEmits": "readonly",
      "defineExpose": "readonly",
      "withDefaults": "readonly"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true,
    "printWidth": 90,
    "proseWrap": "never",
    "endOfLine": "auto"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
